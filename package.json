{
  "name": "depark",
  "version": "1.0.0",
  "description": "Parking Management System",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install && npm install --prefix packages/frontend && npm install --prefix packages/backend",
    "start:frontend": "npm start --prefix packages/frontend",
    "start:backend": "npm run dev --prefix packages/backend",
    "build:frontend": "npm run build --prefix packages/frontend",
    "build:backend": "npm run build --prefix packages/backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}