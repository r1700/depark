{
  "name": "depark",
  "version": "1.0.0",
  "description": "A comprehensive system to manage automated multi-level parking facilities",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:opc": "npm run dev --workspace=packages/opc",
    "dev:backend": "npm run dev --workspace=packages/backend",
    "dev:frontend": "npm run start --workspace=packages/frontend",
    "build:opc": "npm run build --workspace=packages/opc",
    "build:backend": "npm run build --workspace=packages/backend",
    "build:frontend": "npm run build --workspace=packages/frontend",
    "install:all": "npm install && npm install --workspace=packages/backend && npm install --workspace=packages/frontend && npm install --workspace=packages/opc",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "jest": "^30.0.4",
    "supertest": "^7.1.3"
  }
}
