// types/parking-config.ts
export interface ParkingConfiguration {
  id: string;
  facilityName: string;
  timezone: string;
  totalSurfaceSpots: number;
  surfaceSpotIds: string[];
  operatingHours: {
    start: string; // HH:mm
    end: string;   // HH:mm
  };
  activeDays?: string[]; // ["Sunday", "Monday", ...]
  maxQueueSize: number;
  avgRetrievalTimeMinutes: number;
  maxParallelRetrievals?: number;
  updatedAt: Date;
  updatedBy: string;
}

export interface SystemSettings {
  maintenance_mode: boolean;
  show_admin_analytics: boolean;
  updatedAt: Date;
  updatedBy: string;
}

export interface AdminConfigResponse {
  success: boolean;
  data?: {
    parkingConfig: ParkingConfiguration;
    systemSettings: SystemSettings;
  };
  error?: string;
}