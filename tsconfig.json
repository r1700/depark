{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

